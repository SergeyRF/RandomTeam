<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Hyase -->
    <style name="btNextStyle" >
        <item name="android:textSize">@dimen/text_smoll</item>
        <item name="android:textColor">@color/text_or_icon</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button_welcome">
        <item name="android:textSize">@dimen/text_smoll</item>
        <item name="android:textColor">@color/text_or_icon</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
    </style>

</resources>
