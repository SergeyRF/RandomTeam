<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.atilladroid.randomteam.activity.fragment.SettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Settings"
        android:id="@+id/tv_settings_name"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/tv_settings_name"
        app:layout_constraintBottom_toTopOf="@+id/view_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dises_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="@string/show_dice"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_medium" />

        <Switch
            android:id="@+id/sw_dises_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_settings_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/settings_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:background="@color/Grey"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/medium_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/view_2"
        app:layout_constraintTop_toBottomOf="@+id/view_1"
        >

        <TextView
            android:id="@+id/tv_number_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="@string/show_number"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_medium"

            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw_number_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_2"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        app:layout_constraintTop_toBottomOf="@+id/view_1"
        android:layout_marginTop="@dimen/settings_margin"
        android:background="@color/Grey"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/medium_margin"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_2"
        app:layout_constraintBottom_toTopOf="@+id/view_3"
        >

        <TextView
            android:id="@+id/tv_for_every"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="@string/for_every"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_medium"

            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw_for_every"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_3"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        app:layout_constraintTop_toBottomOf="@+id/view_2"
        android:layout_marginTop="@dimen/settings_margin"
        android:background="@color/Grey"/>



</android.support.constraint.ConstraintLayout>
